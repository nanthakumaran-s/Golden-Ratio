<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoActionBarMainLayout" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="colorPrimary">#000000</item>
        <item name="colorPrimaryDark">#121212</item>
        <item name="colorAccent">@color/colorPrimary</item>

        <item name="android:windowActivityTransitions">true</item>

        <item name="android:windowEnterTransition">@transition/exit</item>
        <item name="android:windowExitTransition">@transition/exit</item>

        <item name="android:windowSharedElementEnterTransition">
            @transition/change_image_transform</item>
        <item name="android:windowSharedElementExitTransition">
            @transition/change_image_transform</item>

    </style>

    <style name="GridStyle" parent="Theme.AppCompat.DayNight.NoActionBar">

        <item name="layout_gravity">center</item>
        <item name="fontFamily">@font/lemon</item>
        <item name="android:textColor">#FF0000</item>
        <item name="android:textSize">16sp</item>

    </style>

    <style name="Options" parent="Theme.AppCompat.DayNight.NoActionBar">

        <item name="fontFamily">@font/amaranth</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">#6C6C6C</item>
        <item name="android:textSize">19sp</item>
        <item name="android:layout_margin">10dp</item>

    </style>

</resources>